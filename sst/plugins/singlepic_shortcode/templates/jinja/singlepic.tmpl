{#  -*- coding: utf-8 -*- #}

<div class="{{ css_class }} {{ alignment }}">
    {% if title %}
        <div class="figure-caption has-text-black {{ title_class }}">{{ title }}</div>
    {% endif %}
        <div class="figure">
            <img class="{{ image_class }} figure-img img-fluid rounded" src="{{ image_path }}" />
             {% if caption %}
                <div class="caption_class">{{ caption }} </div>
              {% endif %}
        </div>
</div>