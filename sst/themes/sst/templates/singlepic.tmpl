{#  -*- coding: utf-8 -*- #}

{% if alignment == 'float-left' %}
    {% set margin = '; margin-left: 10px; margin-right: 5px;' %}
{% elif alignment == 'float-right' %}
    {% set margin = '; margin-right: 10px; margin-left: 5px;' %}
    {% else %}
    {% set margin = '' %}
{%  endif %}
<div class="{{ css_class }}" style="display:table; clear:both; {{ margin }}">
    {% if title %}
        <div class="figure-caption has-text-black {{ title_class }}" style="font-weight:bold">{{ title }}</div>
    {% endif %}
        <div class="figure {% if has_borders %}
            sst_border
        {% endif %}" style="width:{{border_width}}; height:{{border_height}}; margin:auto;
        {% if not has_borders %}padding: 10px;{% endif %}">
        {% if image_path %}
            <img class="{{ image_class }} figure-img img-fluid rounded"
             src="{{ image_path }}" style="height: {{ height }}; width: {{ width }};"/>
             {% if caption %}
                <div class="{{ caption_class}}" style="font-weight:bolder; font-size:smaller">{{ caption }} </div>
              {% endif %}
        {% else %}
        <h3>No path given for image</h3>
        {% endif %}
        </div>
</div>